<?xml version="1.0" encoding="UTF-8"?>
<project name="Root" default="build-all">

   <property file="application-settings.properties" />
   <target name="disappgen"><ant dir="disappgen" target="jar" /></target>
   <target name="generate-all-sources" depends="disappgen">
      <dependset>
         <srcfilelist
            dir  ="."
            files="disappgen.jar" />
         <targetfileset
             dir     ="udt-c/src-gen"
             includes="**/*.h, **/*.c" />
         <targetfileset
             dir     ="udt-cpp/src-gen"
             includes="**/*.hpp, **/*.cpp" />
         <targetfileset
             dir     ="dab/src-gen"
             includes="**/*.java" />
         <targetfileset
             dir     ="sc/src-gen"
             includes="**/*.java" />
      </dependset>
      <java fork="true" classname="disapp.generator.Main">
         <classpath location="lib/antlr-runtime-3.3.jar" />
         <classpath location="lib/javax.activation-1.2.0.jar" />
         <classpath location="lib/javax.activation-api-1.2.0.jar" />
         <classpath location="lib/jaxb-api-2.3.1.jar" />
         <classpath location="lib/jaxb-core-2.3.0.jar" />
         <classpath location="lib/jaxb-impl-2.3.2.jar" />
         <classpath location="lib/ST4-4.0.4.jar" />
         <classpath location="disappgen.jar" />
         <arg value="--model=dab.xml" />
      </java>
   </target>

   <target name="util-c"      ><exec dir="util-c"       executable="make" failonerror="true" /></target>
   <target name="util-c-tests"><exec dir="util-c/tests" executable="make" failonerror="true" /></target>
   <target name="udt-c"       ><exec dir="udt-c"        executable="make" failonerror="true" /></target>

   <target name="util-cpp"    ><exec dir="util-cpp"     executable="make" failonerror="true" /></target>
   <target name="udt-cpp"     ><exec dir="udt-cpp"      executable="make" failonerror="true" /></target>

   <target name="util-java"   ><ant  dir="util-java" /></target>
   <target name="dab"         ><ant  dir="dab"       /></target>
   <target name="sc"          ><ant  dir="sc"        /></target>
   <target name="udt-java"    ><ant  dir="udt-java"  /></target>

   <target name="build-all">
      <antcall target="generate-all-sources" />
      <parallel>
         <sequential>
            <antcall target="util-c" />
            <antcall target="udt-c" />
         </sequential>
         <sequential>
            <antcall target="util-cpp" />
            <antcall target="udt-cpp" />
         </sequential>
         <sequential>
            <antcall target="util-java" />
            <parallel>
               <antcall target="dab" />
               <antcall target="sc" />
               <antcall target="udt-java" />
            </parallel>
         </sequential>
      </parallel>
   </target>

   <target name="build-all-en-serie">
      <antcall target="generate-all-sources" />
      <antcall target="util-c" />
      <antcall target="udt-c" />
      <antcall target="util-cpp" />
      <antcall target="udt-cpp" />
      <antcall target="util-java" />
      <antcall target="dab" />
      <antcall target="sc" />
      <antcall target="udt-java" />
   </target>

   <target name="run-c" depends="util-c,udt-c">
      <exec executable="make" dir="udt-c">
         <arg value="IFACE=${iface}" />
         <arg value="UDT_ADDRESS=${udt.address}" />
         <arg value="UDT_PORT=${udt.port}" />
         <arg value="SC_ADDRESS=${sc.address}" />
         <arg value="SC_PORT=${sc.port}" />
         <arg value="DAB_ADDRESS=${dab.address}" />
         <arg value="DAB_PORT=${dab.port}" />
         <arg value="run"/>
      </exec>
   </target>

   <target name="run-cpp" depends="util-cpp,udt-cpp">
      <exec executable="make" dir="udt-cpp">
         <arg value="IFACE=${iface}" />
         <arg value="UDT_ADDRESS=${udt.address}" />
         <arg value="UDT_PORT=${udt.port}" />
         <arg value="SC_ADDRESS=${sc.address}" />
         <arg value="SC_PORT=${sc.port}" />
         <arg value="DAB_ADDRESS=${dab.address}" />
         <arg value="DAB_PORT=${dab.port}" />
         <arg value="run"/>
      </exec>
   </target>

   <target name="run-java" depends="util-java,udt-java">
      <ant dir="udt-java" target="run" />
   </target>

   <target name="clean">
      <ant  dir="dab"                                 target="clean" />
      <ant  dir="sc"                                  target="clean" />
      <exec dir="udt-c"        executable="make" ><arg value="clean" /></exec>
      <exec dir="udt-cpp"      executable="make" ><arg value="clean" /></exec>
      <ant  dir="udt-java"                            target="clean" />
      <exec dir="util-c/tests" executable="make" ><arg value="clean" /></exec>
      <exec dir="util-c"       executable="make" ><arg value="clean" /></exec>
      <exec dir="util-cpp"     executable="make" ><arg value="clean" /></exec>
      <ant  dir="disappgen"                           target="clean" />
      <ant  dir="util-java"                           target="clean" />
      <delete file="disappgen.jar" />
      <delete file="unite_de_traitement" />
      <delete file="unite_de_traitement-mingw32" />
      <delete file="UniteDeTraitement" />
      <delete file="UniteDeTraitement-mingw32" />
   </target>

</project>
